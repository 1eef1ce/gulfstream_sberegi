//outline fix
input
textarea
  resize none
  &:focus
    box-shadow none!important

button
a
  display inline-block
  color inherit
  text-decoration none
  &:hover
  &:focus
    outline none
    box-shadow none
    color inherit
    text-decoration none

button
  padding 0
  border 0

ul
  padding 0
  margin 0

//bootstrap macOs fix
.row
  &:before
  &:after
    display inline-block !important
    content normal

//styles
