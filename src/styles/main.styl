.thumbnail
  position relative
  display flex
  background colorGrey
  width 80px
  height 80px
  cursor pointer
  &.active
    .border-tl
    .border-tr
    .border-br
    .border-bl
      position absolute
      width 5px
      height 5px
      border-width 1px
      border-color colorRed
    .border-tl
      top 0
      left 0
      border-style solid none none solid
    .border-tr
      top 0
      right 0
      border-style solid solid none none
    .border-br
      bottom 0
      right 0
      border-style none solid solid none
    .border-bl
